<h1 class="full"><%= breadcrumbs :admin, :schools %></h1>
<hr class="full" />
<table class="full">
  <tr>
    <th>Title</th>
    <th>Slug</th>
    <th>School type</th>
    <th>Ask for teacher?</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @schools.each do |school| %>
  <tr>
    <td><%= school.title %></td>
    <td><%= school.slug %></td>
    <td><%= school.school_type.title %></td>
    <td><%= school.teacher %></td>
    <td><%= link_to 'Show', school %></td>
    <td><%= link_to 'Edit', edit_school_path(school) %></td>
    <td><%= link_to 'Destroy', school, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>
<hr class="full" />
<%= link_to 'New School', new_school_path, :class => 'full' %>
