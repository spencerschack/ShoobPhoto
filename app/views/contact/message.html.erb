<img src="/images/banners/contact/contact_banner.jpg" class="full" />
<%= form_for @message, :url => contact_path do |f| %>
  <% if @message.errors.any? %>
    <div class="full">
      <div id="error_explanation">
        <h2><%= pluralize(@message.errors.count, "error") %> prohibited this message from being sent:</h2>
        <ul>
        <% @message.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>
  <div class="two_thirds_box">
    <div class="third">
      <div class="field">
        <%= f.label :name %>
        <%= f.text_field :name %>
      </div>
    </div>
    <div class="third">
      <div class="field">
        <%= f.label :school %>
        <%= f.text_field :school %>
      </div>
    </div>
    <div class="third">
      <div class="field">
        <%= f.label :email %>
        <%= f.text_field :email %>
      </div>
    </div>
    <div class="third">
      <div class="field">
        <%= f.label :phone %>
        <%= f.text_field :phone %>
      </div>
    </div>
    <div class="two_thirds">
      <div class="field">
        <%= f.label :message %>
        <%= f.text_area :message %>
      </div>
      <div class="field third right">
        <%= f.submit 'Send' %>
      </div>
    </div>
  </div>
  <div class="third">
    I am interested in more information about:<br />
    (Please check all that apply)
    <ul>
      <li>&nbsp;</li>
      <% [
          'Boosting STAR Test Results',
          'Transitioning to Common Core',
          'Safety and Classroom Management',
          'Academic Achievement',
          'Promoting Parent Involvement',
          'Promoting School Activities',
          'Yearbooks',
          'School Photography'
        ].each do |interest| %>
        <li>
          <%= check_box_tag "message[interests][#{interest}]" %>
          <%= interest %>
        </li>
      <% end %>
    </ul>
  </div>
<% end %>